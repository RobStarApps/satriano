       
  <%=form_for(@user, :url=>change_user_profile_path, :class=>'bs-example form-horizontal') do |f| %>

  
  <fieldset>
    <div class="form-group <%='has-error' unless @user.errors[:avatar].blank? %>">
    <%=f.label :avatar, t('avatar'), :class=>'col-sm-3 control-label' %>
      <div class="col-sm-9">
         <%= f.file_field :avatar, :class=>'form-control' %>
           <%= error_messages_for(@user, :avatar) %>
      </div>
    </div>
  
    <div class="form-group">
      <div class="col-sm-9 col-sm-offset-3">
        <%=f.submit nil, class: "btn btn-primary pull-right"%>
      </div>
    </div>
  </fieldset>
  <% end %>